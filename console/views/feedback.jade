extends layout

block content
	include nav
	script(src="http://50.23.173.242:5050/widget/scripts/star.js")

	div(class="container")
		div(class="panel panel-default text-center")
			h2 SlaaS Feedback Analysis
		div(class="panel panel-default")
			div(class="panel-body")
				table(class="table table-striped table-hover")
					tr
						th Instance
						th Resource
						th Description
						th Rating
						th Relevance
						th Score
						th Test
						th Stats
					for entry in entries
						tr
							td=entry.iid
							td=entry.rid
							td=entry.desc
							td=entry.rating
							td=entry.relevance
							td=entry.score
							td
								div(class="ServiceRatingWidget" data-oup="1" data-inp="0" data-key0="28269fa0-05ef-11e4-8fe2-3dabf964f264" data-widgetid=entry.rid)
							td
								div
									a(href=('./show_feedback_stats?rid=' + entry.rid + '&desc=' + entry.desc)) Feedback
