extends layout

block append head
	script(src='/js/service_list.js')

block content
	include nav

	div(class="container")
		div(class="panel panel-default text-center")
			h2 Services
		div(class="panel panel-default")
			div(class="panel-body")
				table(class="table table-striped table-hover")
					tr
						th Id
						th Name
						th Rating
						th Trust Level
						th Data Requirement
						th Status
						th Toggle
						th Edit
					for entry in entries
						tr
							td=entry.id
							td=entry.display_name
							td=entry.rating
							td=entry.trust_level
							td=entry.req_data
							td
								div(id=entry.id, class="svc_data")=entry.status
							td
								button(id="svc_" + entry.id, class="btn btn-success btn-sm") Start
							td
								a(href=('./service?id=' + entry.id + '&name=' + entry.display_name + '&rating=' + entry.rating + '&trust=' + entry.trust_level)) Edit

