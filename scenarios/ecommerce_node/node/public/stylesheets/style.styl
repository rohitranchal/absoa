/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #2e2e2e
background-color = #faf9f0

body
	font-family 'Georgia'
	background-color background-color
	color #444

.container
	margin:auto
	width:70%
	overflow hidden

.main-content
	margin:auto
	width 480px
	p
		margin-top 20px
		margin-bottom 20px

#login_content
	margin:auto
	width 480px
	margin-top 100px
	margin-bottom 100px
	p
		margin-top 20px
		margin-bottom 20px

#shop
	th,td
		width 160px
		height 50px
		vertical-align middle
		table-layout fixed

#login
  #login_1
		width 30%
		height 10px
		vertical-align middle
		text-align right
  #login_2
		width 70%
		height 10px
		vertical-align middle
		text-align right
  #login_3
		width 100%
		height 10px
		vertical-align middle
		text-align center
th,td
	width 100px
	height 10px
	vertical-align middle

#login_panel
	width 50%
	margin-left auto
	margin-right auto


p
	line-height 1.8
	
.grey
	color grey

.green
	color green

.red
	color red

footer
	width 500px
	margin 50px auto
	border-top 2px dotted #ccc
	padding-top 5px
	text-align center
	font-size 13px
