doctype html
html
	include header
	script(src="./javascripts/shop.js")
	body
		include nav_bar_without_checkout
		.container
			.main-content(id="login_content")
				block content
					form(class="form-horizontal" role="form" action="createAb-complete" method="post")
						div(class="form-group")
							label(for="fn" class="col-sm-2 control-label") Firstname
							div(class="col-sm-10")
								input(class="form-control" id="fn" placeholder="Mark" name="firstname")
						div(class="form-group")
							label(for="ln" class="col-sm-2 control-label") Lastname
							div(class="col-sm-10")
								input(class="form-control" id="ln" placeholder="Jin" name="lastname")
						div(class="form-group")
							label(for="address" class="col-sm-2 control-label") Address
							div(class="col-sm-10")
								input(class="form-control" id="address" placeholder="350 S. Grant St." name="address")
						div(class="form-group")
							label(for="city" class="col-sm-2 control-label") City
							div(class="col-sm-10")
								input(class="form-control" id="city" placeholder="West Lafayette" name="city")
						div(class="form-group")
							label(for="state" class="col-sm-2 control-label") State
							div(class="col-sm-10")
								select(class="form-control" id="state" name="state")
									each state in states
										option=state
						div(class="form-group")
							div(class="col-sm-offset-2 col-sm-10")
								button(type="submit" class="btn btn-default") Create Active Bundle
	footer
		p  ABSOA E-Commerce Scenario (Running on node with Express, Jade and Stylus)
